                ### ------- INPUT FILE ------- ###

RUN-SECTION
	name =  result2QDot3eCor2
	relaxation=follow,full
	### PARALELLIZATION ###
	usepthreads = 2,summf2 ,no-funkphi
	ptiming # Check ptiming file to control overload, and include
            #	no-* keywords accordingly to suppress inefficiently
            # 	parallelized routines. Performance of the parallelisation
	rlxunit = au
	tfinal = 1 tout = 0.001 tpsi = 0.001
	steps
	orben		# para relajacion
	gridpop		# para showd1d
	pdensity	# particle density file. Useful to compute quantities after run.
	veigen
	psi
	auto
end-run-section
OPERATOR-SECTION
	# (The default operator path is displayed when typing mctdh84 -max)
	#oppath = /home/mendez/github_repositories/my_repositories/mctdh_cp2021/double_quantum_dot_model/qdot_02/energies_vs_lambda/study_of_performance_03/running_comparison_performance
	opname = operator_file
end-operator-section
SBASIS-SECTION
	X1 =	10
	X2 =	id,1
	X3 =	id,1
end-sbasis-section
PBASIS-SECTION
	X1	sin	501	-25.0	25.0	short
	X2	sin	501	-25.0	25.0	short
	X3	sin	501	-25.0	25.0	short
end-pbasis-section
INTEGRATOR-SECTION
	CMF      	=	0.001,	1.0d-9	#np1	# Constant Mean-Field scheme
	RK8/spf  	=	1.0d-9 			#np1	# Runge-Kutta integrator for SPFs
	rrDAV/A  	=	500,	1.0d-9	#np1	# for A-vector
end-integrator-section
INIT_WF-SECTION
	build
		X1	eigenf	heff	pop=1
		X2	map		X1
		X3	map		X1
	end-build
	A-coeff
		1	1	1	( 1.0, 0.0 )
	end-A-coeff
end-init_wf-section
end-input

 -w -p V_L 0.9,au -p lambda 0.2 

#******************************************************************************#
                ### ------ OPERATOR FILE ------ ###

OP_DEFINE-SECTION
	title
		double quantum dot model (three electrons)
		hamiltonian with interaction (heff)
	end-title
end-op_define-section
PARAMETER-SECTION
	mass_X1	=	1.d0, au	## electron mass 1
	mass_X2	=	mass_X1		## electron mass 2
	mass_X3	=	mass_X1		## electron mass 3
	b_L		=	0.22		## parameter of size left qdot
	b_R		=	1.0			## parameter of size right qdot
	V_R		=	0.6			## right qdot potential depth - (absolut value)
	w		=	1			## angular frecuency
	l		=	1			## characteristic transverse confinement length
	R		=	9.0			## distance between centers of qdots
end-parameter-section
LABELS-SECTION
	Veff_L	=	gauss[b_L,-R/2]				## The longitudinal open potential from left qdot
	Veff_R	=	gauss[b_R,R/2]				## The longitudinal open potential from right qdot
	Vee = natpot{../potfit_Vee ignore}		## Electron interaction potential
end-labels-section
HAMILTONIAN-SECTION
	-----------------------------------------------------------------------------
	modes	|	X1		|	X2		|	X3
	-----------------------------------------------------------------------------
	1		|	KE		|	1		|	1
	1		|	1		|	KE		|	1
	1		|	1		|	1		|	KE
	-V_L	|	Veff_L	|	1		|	1
	-V_R	|	Veff_R	|	1		|	1
	-V_L	|	1		|	Veff_L	|	1
	-V_R	|	1		|	Veff_R	|	1
	-V_L	|	1		|	1		|	Veff_L
	-V_R	|	1		|	1		|	Veff_R
	lambda	|1&2 Vee
	lambda	|1&3 Vee
 	lambda	|2&3 Vee
	---------------------------------------------------------
end-hamiltonian-section
HAMILTONIAN-SECTION_heff
usediag
	---------------------------------------------------------
	modes	|	X1
	---------------------------------------------------------
	1		|	KE
	-V_L	|	Veff_L
	-V_R	|	Veff_R
	---------------------------------------------------------
end-hamiltonian-section
end-operator

